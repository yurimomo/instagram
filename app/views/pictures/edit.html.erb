<p id="notice"><%= notice %></p>
<% if @pic.errors.any? %>
     <div id="error_explanation">
      <!-- バリデーションエラーの件数表示   -->
      <h2><%= @pic.errors.count %>件のエラーがあります</h2>

       <ul>
        <% @pic.errors.full_messages.each do |msg| %>
         <li><%= msg %></li>
         <% end %>
       </ul>
       </div>
       <% end %>

  <div class="container">
  <div class="col-md-8 col-md-offset-2">
   <%= form_for(@pic) do |f| %>
     <div class="row">
     <%= f.file_field :picture %>
    </div>
  <div class="row">
    <%= f.text_field :content, class: 'btn btn-default' %>
  </div>


    <%= f.submit class: 'btn btn-default edit' %>
 </div>
 <% end %>

<%= link_to "一覧" , pictures_path %>
</div>
</div>